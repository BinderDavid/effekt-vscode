{
    "name": "effekt",
    "displayName": "effekt",
    "description": "The Effekt language",
    "repository": {
        "type": "git",
        "url": "https://github.com/effekt-lang/effekt-vscode.git"
    },
    "version": "0.1.4",
    "publisher": "b-studios",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:effekt",
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "effekt",
                "extensions": [
                    ".eff",
                    ".effekt"
                ],
                "aliases": [
                    "Effekt",
                    "effekt"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "markdown",
                "extensions": [
                    ".md"
                ],
                "aliases": [
                    "markdown"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "effekt",
                "scopeName": "source.effekt",
                "path": "./syntaxes/effekt.tmLanguage.json"
            },
            {
                "language": "markdown",
                "scopeName": "source.markdown",
                "path": "./syntaxes/literateeffekt.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Effekt",
            "properties": {
                "effekt.executable": {
                    "type": "string",
                    "description": "Path to the effekt executable (you need to restart vscode after changing this setting)."
                },
                "effekt.showExplanations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display additional information when hovering over identifier."
                },
                "effekt.showTarget": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the generated JavaScript."
                },
                "effekt.showCore": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show the translated Core (System Îž)."
                },
                "effekt.remoteDebug": {
                    "type": "boolean",
                    "default": false,
                    "description": "Start effekt server in debug mode and remotely connect to it."
                },
                "effekt.remoteDebugPort": {
                    "type": "integer",
                    "default": 5007,
                    "description": "Port of the remote effekt server."
                },
                "effekt.commands": {
                    "type": "array",
                    "default": [
                        "println"
                    ]
                }
            }
        },
        "commands": [
            {
                "category": "Effekt",
                "command": "effekt.selectLinkedEditors",
                "title": "Focus Product Editors"
            },
            {
                "category": "Effekt",
                "command": "effekt.clearAnnotations",
                "title": "Clear effect annotations."
            },
            {
                "category": "Effekt",
                "command": "effekt.inferEffects",
                "title": "Infer effects"
            },
            {
                "category": "Effekt",
                "command": "effekt.inferPassedEffects",
                "title": "Get passed effects"
            }
        ],
        "keybindings": [
            {
                "command": "effekt.selectLinkedEditors",
                "key": "ctrl+alt+p",
                "mac": "cmd+alt+p",
                "when": "editorTextFocus && editorLangId == 'effekt'"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "effekt.clearAnnotations",
                    "group": "effektGroup@1"
                },
                {
                    "command": "effekt.inferEffects",
                    "group": "effektGroup@2"
                },
                {
                    "command": "effekt.inferPassedEffects",
                    "group": "effektGroup@3"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode-languageclient": "^6.1.3"
    },
    "devDependencies": {
        "vscode-jsonrpc": "^6.0.0",
        "typescript": "^4.1.3",
        "vscode": "^1.1.26",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
